<section class="container-fluid d-flex flex-row justify-content-between align-items-center">
  <h1><%= Current.user.username %> <%= link_to edit_user_path(Current.user), id: "edit_user_link" do %><i class="bi bi-pencil-fill fs-3"></i><% end %></h1>
  <%= button_to "Log Out", session_path(Current.session), method: :delete, class: "btn btn-danger" %>
</section>

<section class="text-center">
  <h1>Your Decks <%= link_to "+ Add Deck", new_user_deck_path(@user), class: "btn btn-lg btn-primary" %>
</h1>
  <div class="my-3" data-controller="deck-search">
    <label for="user-deck-search">Search by Name:</label>
    <input type="text" id="user-deck-search" placeholder="e.g. Ryzeal" data-action="keyup->deck-search#search_decks" data-deck-search-target="query">
    <%= render 'decks_table' %>
  </div>
</section>