<%= form_with model: @user, url: users_path, method: :post do |form| %>
  <div class="mb-3">
    <%= form.label :username, "Username:" %>
    <br>
    <%= form.text_field :username, required: true, autocomplete: "username", placeholder: "Enter your username", maxlength: 30 %><br>
  </div>
  <div class="mb-3">
    <%= form.label :email_address, "Email Address:" %>
    <br>
    <%= form.email_field :email_address, required: true, autocomplete: "email", placeholder: "Enter your email address", maxlength:30 %><br>
  </div>
  <div>
    <%= form.label :password, "Password:" %>
    <br>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 30 %><br>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation, "Password Confirmation:" %>
    <br>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 30 %><br>
  </div>
  <%= render 'shared/form_errors' %>
  <%= form.submit "Sign Up", class: "btn btn-primary mt-2 mb-2" %>
<% end %>