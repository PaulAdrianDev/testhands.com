<section id="dueling-overlay" style="position: absolute; top:0; left:0; width:100%; min-height:100%;" data-controller="dueling-board" data-card-image-url="<%= asset_path('card.jpg')%>" data-dueling-board-target="overlay">
  <button class="btn btn-danger" data-action="click->dueling-board#close">< Back</button>
  <h1>Also add decks to sessionStorage and make boardHistory clickable</h1>
  <h1 data-dueling-board-target="title" class="text-center m-0 font-secondary fw-light"></h1>
  <h4 data-dueling-board-target="board-type" class="text-center m-0 lh-1 font-secondary fw-light color-gray"></h4>
  <p data-dueling-board-target="username" class="text-center m-0 font-secondary" class="small-gray"></p>
  <p class="text-center mt-2 font-secondary color-gray" style="font-size:1.2rem"><i class="bi bi-patch-question-fill me-2"></i>Click on a card to read it</p>
  <div class="container-fluid row">
    <div class="col-lg-9 col-12 position-relative" data-dueling-board-target="board-outer-div">
      <button class="btn btn-primary position-absolute rounded-4" data-action="click->dueling-board#flip"><i class="bi bi-arrow-down-up align-middle"></i></button>
      <%= render 'homepage/dueling/card_information' %>
      <%= render "homepage/dueling/board" %>
    </div>
    <div class="col-lg-3 col-12 mt-3 mt-lg-0 border-lg-left">
      <%= render "homepage/dueling/options" %>
    </div>
  </div>
  <h1 class="mt-4 mb-0" data-dueling-board-target="advice-title"></h1>
  <p class="mt-0 mb-5" data-dueling-board-target="advice"></p>
  <div data-dueling-board-target="deck-history" class="d-flex flex-column align-items-center mt-4 pt-3 border-primary border-top">
    <h2 class="m-0">Decks History</h2>
    <p class="mt-0 mb-3 color-gray" style="font-size:1.2rem">Click on a deck to rematch it</p>
  </div>
</section>